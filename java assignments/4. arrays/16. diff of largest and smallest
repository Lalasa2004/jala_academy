public class Main {
    // Function to get the difference of largest and smallest value
    static int differenceOfMaxMin(int[] arr) {
        int max = arr[0];
        int min = arr[0];
        for (int num : arr) {
            if (num > max) {
                max = num;
            }
            if (num < min) {
                min = num;
            }
        }
        return max - min;
    }

    public static void main(String[] args) {
        int[] numbers = {10, 15, 20, 25, 30};
        System.out.println("Difference between max and min: " + differenceOfMaxMin(numbers));
    }
}
